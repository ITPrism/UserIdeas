<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_USERIDEAS_VIEW_ITEMS_TITLE">
        <message>
            <![CDATA[COM_USERIDEAS_VIEW_ITEMS_DESC]]>
        </message>
    </layout>

    <fields name="params">
        <fieldset name="basic">
            <field name="items_description_length" type="text" default="255" label="COM_USERIDEAS_ITEMS_DESCRIPTION_LENGTH" description="COM_USERIDEAS_ITEMS_DESCRIPTION_LENGTH_DESC" />
            <field name="items_description_html" type="radio" default="0" label="COM_USERIDEAS_ITEMS_ALLOW_HTML" description="COM_USERIDEAS_ITEMS_ALLOW_HTML_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="items_display_button" type="radio" default="1" label="COM_USERIDEAS_ITEMS_DISPLAY_BUTTON" description="COM_USERIDEAS_ITEMS_DISPLAY_BUTTON_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="items_ordering" type="list" default="2" label="COM_USERIDEAS_ORDERING" description="COM_USERIDEAS_ITEMS_ORDERING_DESC">
                <option value="0">COM_USERIDEAS_ORDER_BY_ORDERING</option>
                <option value="1">COM_USERIDEAS_ORDER_BY_TITLE</option>
                <option value="2">COM_USERIDEAS_ORDER_BY_DATE</option>
                <option value="3">COM_USERIDEAS_ORDER_BY_VOTES</option>
            </field>
            <field name="items_ordering_direction" type="list" default="ASC" label="COM_USERIDEAS_ORDERING_DIRECTION" description="COM_USERIDEAS_ORDERING_DIRECTION_DESC">
                <option value="ASC">Ascending</option>
                <option value="DESC">Descending</option>
            </field>
            <field name="items_display_results_number" type="text" default="20" size="50" label="COM_USERIDEAS_ITEMS_RESULTS_NUMBER" description="COM_USERIDEAS_ITEMS_RESULTS_NUMBER_DESC" />

            <field name="show_tags"
                   type="list"
                   class="chzn-color"
                   label="JGLOBAL_SHOW_TAGS_LABEL"
                   description="JGLOBAL_SHOW_TAGS_DESC"
                    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>

            <field name="show_intro" type="list" class="chzn-color"
                   label="COM_USERIDEAS_DISPLAY_ITEMS_DESCRIPTION"
                   description="COM_USERIDEAS_DISPLAY_ITEMS_DESCRIPTION_DESC">
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>

            <field
                name="show_pagination"
                type="list"
                description="JGLOBAL_PAGINATION_DESC"
                label="JGLOBAL_PAGINATION_LABEL"
                >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
                <option value="2">JGLOBAL_AUTO</option>
            </field>

            <field
                name="show_pagination_results"
                type="list"
                label="JGLOBAL_PAGINATION_RESULTS_LABEL"
                description="JGLOBAL_PAGINATION_RESULTS_DESC"
                >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>
    </fields>
</metadata>